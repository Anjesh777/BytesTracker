@inject Helper.AuthenticationState authState
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BytesTracker</a>
    </div>
</div>



<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (!authState.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    Login
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register">
                    Register
                </NavLink>
            </div>
        }else{
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dashboard">
                    Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="transaction">
                    Transaction Manager
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="amountmanager">
                    Amount Manager
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="logout">
                    Logout
                </NavLink>
            </div>
        }
    </nav>
</div>

@code{
    protected override void OnInitialized()
    {
        authState.OnAuthenticationChanged += StateHasChanged;
    }
    public void Dispose()
    {
        authState.OnAuthenticationChanged -= StateHasChanged;
    }


}
